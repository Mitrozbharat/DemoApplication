@model Employee

<div class="container">
    <div class="card">
        <form asp-action="Add" asp-controller="Employee" method="post">

            <div class="form-group" >
                <label> Enter Employee Id </label>
                <input class="form-control" type="text" name="id" asp-for="Id" required />

            </div>
            <div class="form-group">

                <label> Enter Employee Email: </label>
                <input class="form-control" type="text" name="Email" asp-for="Email" required />
            </div>
            
            <div class="form-group">
                <label> Select Your role</label>
                <select name="Role" asp-for="Role" class="form-control">
                    <option value="value">select ...</option>
                    <option value="Admin">Admin</option>
                    <option value="User">User</option>
                    <option value="Editer">Editer</option>
                </select> 
             
            </div>

            <div class="my-3">
                <button type="submit">
                    submit
                </button>
            </div>
        </form>
    </div>
</div>