@model IEnumerable<User>

<div class="container">
  
    @if (Model == null || !Model.Any())
    {
        @ViewBag.Message
    }
    else
    {
        <div class="my-4">
            <h1> Login successful @ViewBag.Username</h1>

        </div>

        <div class=" container">
            <div class="active">
                <h1> Employee List </h1>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th> Id</th>
                        <th> Email</th>
                        <th>Role </th>
                        <th colspan="2" class="text-center"> Actions</th>
                    </tr>
                <thead>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                    {
                        <tr>
                            <td>@i.Id</td>
                            <td>@i.Email</td>
                            <td>@i.Password</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>


    }



</div> 


